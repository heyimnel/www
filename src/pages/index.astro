---
import Layout from "../layouts/Layout.astro";
---

<Layout isFooterFixed={true}>
    <div class="bg-black w-full" id="container">
        <div class="pt-8 md:pt-12 pb-4">
            <p
                class="select-none text-gray-200 text-center mx-auto text-3xl md:text-2xl font-inter"
                draggable="false"
            >
                hi, I'm nel. i like coding and stuff, like i love my fiancée.
            </p>
        </div>

        <div class="max-w-3xl mx-auto px-4 md:px-6" id="aboutcon">
            <div
                class="rounded-xl border border-white/14 md:border-white/10 p-4 md:p-6 mb-6 md:mb-8 bg-gray-900/10"
            >
                <h2 class="text-gray-200 text-2xl md:text-3xl mb-3">
                    No but like really, who are you?
                </h2>
                <p class="text-gray-300 mb-4">
                    I'm Kornel! I'm a passionate developer who loves coding, but
                    still looking for the right path. When I'm not coding, I
                    enjoy spending time with my fiancée, listening to music, and
                    playing games (Dead Cells is one of my all-time favorites!).
                </p>
                <div
                    class="rounded-xl border border-white/14 md:border-white/10 p-4 md:p-6 bg-gray-900/10"
                >
                    <h2 class="text-gray-200 text-xl mb-4">My Skills</h2>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-3 md:gap-4">
                        <div
                            class="group rounded-lg border border-white/5 p-2 md:p-3 text-center hover:bg-gray-800/20 transition-colors"
                        >
                            <p class="text-gray-200">JavaScript</p>
                        </div>
                        <div
                            class="group rounded-lg border border-white/5 p-2 md:p-3 text-center hover:bg-gray-800/20 transition-colors"
                        >
                            <p class="text-gray-200">HTML5</p>
                        </div>
                        <div
                            class="group rounded-lg border border-white/5 p-2 md:p-3 text-center hover:bg-gray-800/20 transition-colors"
                        >
                            <p class="text-gray-200">Tailwind CSS</p>
                        </div>
                        <div
                            class="group rounded-lg border border-white/5 p-2 md:p-3 text-center hover:bg-gray-800/20 transition-colors"
                        >
                            <p class="text-gray-200">Astro</p>
                        </div>
                        <div
                            class="group rounded-lg border border-white/5 p-2 md:p-3 text-center hover:bg-gray-800/20 transition-colors"
                        >
                            <p class="text-gray-200">SQLite</p>
                        </div>
                        <div
                            class="group rounded-lg border border-white/5 p-2 md:p-3 text-center hover:bg-gray-800/20 transition-colors"
                        >
                            <p class="text-gray-200">Git</p>
                        </div>
                    </div>
                </div>
                <div class="mt-2">
                    <h2
                        class="text-gray-200 text-xl md:text-2xl mt-3 mb-3 md:mb-4 text-center"
                    >
                        Projects
                    </h2>
                    <div class="max-w-[98%] mx-auto md:max-w-none">
                        <div class="grid grid-cols-3 gap-2 md:gap-4">
                            <a
                                href="https://github.com/heyimnel/www"
                                target="_blank"
                                class="text-sm"
                            >
                                <div
                                    class="group rounded-lg border border-white/14 md:border-white/10 p-2.5 md:p-4 text-center hover:bg-gray-800/15 transition-colors h-full flex flex-col"
                                >
                                    <h3
                                        class="text-gray-200 text-[0.9rem] md:text-lg mb-1 md:mb-2"
                                    >
                                        This Website
                                    </h3>
                                    <p
                                        class="text-gray-300 text-[0.55rem] md:text-sm mb-1.5 md:mb-4 leading-tight md:leading-normal flex-grow flex items-center justify-center"
                                    >
                                        My personal website <br
                                            class="hidden md:inline"
                                        />
                                        built with Astro and Tailwind CSS.
                                    </p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div
            class="text-center flex flex-wrap justify-center gap-3 md:gap-4 mb-8 md:mb-12"
        >
            <a
                href="/opensource/"
                class="rounded-lg border border-white/14 md:border-white/10 px-4 py-2 md:px-6 md:py-3 text-gray-200 hover:bg-gray-800/30 transition-colors flex items-center text-sm md:text-base"
            >
                ← Explore Open Source
            </a>
            <a
                href="/blog/"
                class="rounded-lg border border-white/14 md:border-white/10 px-4 py-2 md:px-6 md:py-3 text-gray-200 hover:bg-gray-800/30 transition-colors flex items-center text-sm md:text-base"
            >
                View My Thoughts →
            </a>
        </div>
    </div>
</Layout>
