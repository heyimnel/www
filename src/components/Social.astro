---
const { platform, username } = Astro.props;

function generateUrl(platform: string, username: string): string {
    if (platform.toLowerCase() === "linkedin") {
        return `https://www.linkedin.com/in/${username}`;
    } else {
        return `https://www.${platform.toLowerCase()}.com/${username}`;
    }
}

const url = generateUrl(platform, username);
---

<a
    href={url}
    draggable="false"
    class="select-none px-3 py-1.5 text-gray-300 bg-white/5.5 hover:bg-gray-700/30 rounded-md transition-colors duration-300"
    >{platform}</a
>
